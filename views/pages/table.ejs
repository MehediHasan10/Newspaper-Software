<%- include('../template/header') -%>
<%- include('../template/navbar') -%>

<div>
    <h1 class="text-center" style='margin-top:3em'>Today's News</h1>

    <div class="owl-carousel">
        <!-- <div> <img src="/images/home.jpg"> </div>
        <div> <img src="/images/home.jpg"> </div>
        <div> <img src="/images/home.jpg"> </div> -->
        <!-- <div> Your Content </div>
        <div> Your Content </div>
        <div> Your Content </div>
        <div> Your Content </div> -->
    </div>
    <div class="container">
        <% if(output.length > 0) { %>

            <div class="row">
                <% output.forEach((entry) => { %>   
                <div class="col-md-4" style="margin-bottom: 10px;">                
                    <div class="card-deck">
                        <div class="card card__one" style="box-shadow: 4px 4px 5px #929293;">
                            <div class="card-header text-center" style="font-weight:bold;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <img class="card-img-top" style = "width:50px; height:50px " src="<%= entry.newspapers[0].logo %>">
                                        <span class="ml-2"><%= entry.newspapers[0].newsPaperName %></span>
                                    </div>

                                </div>

                            </div>
                            <img class="card-img-top" width="auto" height="200px" src="<%= entry.image %>">
                            <div class="card-body">
                                <h5 class="card-title" style="text-align: justify;"><%= entry.headline %></h5>
                                <h6 class="card-text" id="d">Date: <%= entry.date.toISOString().split('T')[0] %></h6>
                                <h6 class="card-text">District: <%= entry.district %></h6>
                            </div>
                            <div class="card-footer" class="text-center">
                                <% if (locals.user) { %>
                                    <a href="/open/<%= entry.id %>" style="text-decoration:none;"><i class="fas fa-folder-open" style="color:green; margin-right:10px" aria-hidden="true"></i> | </a>
                                    <a href="/edit/<%= entry.id %>" style="text-decoration:none;">Edit | </a>
                                    <a href="/delete/<%= entry.id %>" style="text-decoration:none;">Delete</a>
                                <% } else { %>
                                    <a href="/open/<%= entry.id %>" style="text-decoration:none;">Open | </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        
    <% } else { %>
        <h5 class="text-center">No Record Found !</h5>
    <% } %>
    </div>
</div>

<script>
    $('.owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    responsiveClass:true,
    responsive:{
        0:{
            items:1,
            nav:true
        },
        600:{
            items:3,
            nav:false
        },
        1000:{
            items:5,
            nav:true,
            loop:false
        }
    }
})
</script>

