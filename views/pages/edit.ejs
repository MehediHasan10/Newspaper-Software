<%- include('../template/header') -%>
<%- include('../template/navbar') -%>

<div>
    <h1 style='margin-top:3em' class='text-center'>Update the News</h1>
    <div class="container">
            <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column" >
                <div style="background: #e3e3e380;
                padding: 50px;">
                    <form method="post" action="/update/<%= output.id %>" class="enctype="multipart/form-data" >
                        <div class="form-group">
                        <label >Headline</label>
                        <input type="text" class="form-control"  name="headline" value="<%=output.headline%>">                     
                        </div>

                        <div class="form-group">
                            <label >Newspaper</label>
                            <input type="text" class="form-control"  name="newsPaper" value="<%=output.newsPaper%>">
                        </div>

                        <div class="form-group">
                            <label >Page Number</label>
                            <input type="text" class="form-control"  name="pageNumber" value="<%=output.pageNumber%>">
                        </div>

                        <div class="form-group">
                            <label >District</label>
                            <input type="text" class="form-control"  name="district" value="<%=output.district%>">
                        </div>

                        <div class="form-group">
                            <label >Date</label>
                            <input type="date" class="form-control"  name="date" value="<%=output.date.toISOString().split('T')[0]%>">
                        </div>

                        <div>
                            <img style="width: 100px; " src="<%= output.image %>" alt="">
                        </div>

                        <div class="form-group">
                            <label >Choose</label>
                            <input type="file" class="form-control"  name="newsUp">
                        </div>
                        
                        <button type="submit" value="Submit" class="btn btn-primary">Update</button>
                    </form>   
                </div>
                
            </div>
    </div>
</div>

<%- include('../template/footer') -%>