<%- include('../template/navbar') -%>


<div class="tableNews">
    <div class="container pt-4" style="background:rgb(255 255 255 / 60%);">
        <h1 class="text-center" style='margin-top:3em'>
            <div class="row">
                <div class="col-md-3">
                    <img class="card-img-top"  src="/images/bdlogo.png" style="width:80px; height: 80px;">
                </div>
                <div class="col-md-6"><img class="card-img-top"  src="<%= output.newspapers[0].logo %>" style="width:220px; height: 100px;"></div>
                <div class="col-md-3">
                    <img src="/images/ais.png" style="width:80px; height: 80px;">
                </div>
            </div>

        </h1>

        <div style="border-style: solid; margin-bottom: 20px; padding-top: 10px; padding-left: 120px; margin-top: 30px;">
            <h2 class="text-center mb-4">
                <%= output.headline %>
            </h2>
            <div class="row">
                <div class="col-md-4 text-center">
                    <h5>
                        <b>Date: </b><%= output.date.toISOString().split('T')[0] %>
                    </h5>
                </div>
                <div class="col-md-4 text-center">
                    <h5>
                        <b>District: </b><%= output.district %>
                    </h5>
                </div>
                <div class="col-md-4 text-center">
                    <h5>
                        <b>Page Number: </b><%= output.pageNumber %>
                    </h5>
                </div>
            </div>
        </div>
        
        
        
        <div class="text-center" style="display: inline-block;position: relative;">
            <img class="img-fluid" id="test" src="<%= output.image %>" alt="">
            

            
        </div>
