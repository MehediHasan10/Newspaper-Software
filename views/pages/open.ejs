<%- include('../template/header') -%>
<%- include('../template/navbar') -%>


<div>
    <div class="container pt-4">
        <h1 class="text-center" style='margin-top:3em'>
            <div class="row">
                <div class="col-md-3">
                    <img class="card-img-top"  src="<%= output.newspapers[0].logo %>" style="width:80px; height: 80px;">
                </div>
                <div class="col-md-6"><%= output.newspapers[0].newsPaperName %></div>
                <div class="col-md-3">
                    <img src="/images/ais.png" style="width:80px; height: 80px;">
                </div>
            </div>

        </h1>
        <h2 class="text-center mb-4">
            <%= output.headline %>
        </h2>
        <div class="row">
            <div class="col-md-4">
                <h5>
                    <b>Date: </b><%= output.date.toISOString().split('T')[0] %>
                </h5>
            </div>
            <div class="col-md-4">
                <h5>
                    <b>District: </b><%= output.district %>
                </h5>
            
            </div>
            <div class="col-md-4">
                <h5>
                    <b>Page Number: </b><%= output.pageNumber %>
                </h5>
            </div>
        </div>
        
        
        <div class="text-center">
            <img class="img-fluid" src="<%= output.image %>" alt=""> 
        </div>
        <!-- <div>
            <a href="/pdfGenerate">Download PDF</a>
        </div> -->
        
        
    </div>
</div>




<%- include('../template/footer') -%>
